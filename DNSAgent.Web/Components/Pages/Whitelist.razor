@page "/whitelist"
@using DNSAgent.Web.Data
@using DNSAgent.Web.Services
@using Microsoft.EntityFrameworkCore
@inject DnsDbContext Db
@inject DnsWorker DnsWorker

<h3>Whitelist Management</h3>

<div class="row">
    <div class="col-md-6">
        <div class="input-group mb-3">
            <input type="text" class="form-control" placeholder="example.com" @bind="newDomain" />
            <button class="btn btn-success" @onclick="AddDomain">Add to Whitelist</button>
        </div>
    </div>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Domain</th>
            <th>Added At</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in whitelist)
        {
            <tr>
                <td>@item.Domain</td>
                <td>@item.AddedAt</td>
                <td>
                    <button class="btn btn-danger btn-sm" @onclick="() => RemoveDomain(item)">Remove</button>
                </td>
            </tr>
        }
    </tbody>
</table>

@code {
    private List<WhitelistedDomain> whitelist = new();
    private string newDomain = "";

    protected override async Task OnInitializedAsync()
    {
        await LoadList();
    }

    private async Task LoadList()
    {
        whitelist = await Db.WhitelistedDomains.OrderByDescending(x => x.AddedAt).ToListAsync();
    }

    private async Task AddDomain()
    {
        if (string.IsNullOrWhiteSpace(newDomain)) return;

        var domain = newDomain.Trim().ToLowerInvariant();
        if (!whitelist.Any(x => x.Domain == domain))
        {
            Db.WhitelistedDomains.Add(new WhitelistedDomain 
            { 
                Domain = domain,
                AddedAt = DateTime.Now 
            });
            await Db.SaveChangesAsync();
            await DnsWorker.RefreshWhitelistAsync();
            await LoadList();
            newDomain = "";
        }
    }

    private async Task RemoveDomain(WhitelistedDomain item)
    {
        Db.WhitelistedDomains.Remove(item);
        await Db.SaveChangesAsync();
        await DnsWorker.RefreshWhitelistAsync();
        await LoadList();
    }
}
