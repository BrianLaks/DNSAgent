@page "/admin/settings"
@rendermode InteractiveServer
@attribute [Microsoft.AspNetCore.Authorization.Authorize(Roles = "Admin")]
@using DNSAgent.Service.Services
@using Microsoft.Extensions.Configuration
@inject IConfiguration Config
@inject DnsWorker DnsWorker

<PageTitle>Admin Settings - DNS Agent</PageTitle>

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col">
            <h1>Admin Settings</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card shadow-sm border-@(DnsWorker.ProtectionEnabled ? "success" : "warning") mb-4">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h4 class="mb-1">Global Blocking Toggle</h4>
                        <p class="text-muted mb-0">When disabled, no domains will be blocked network-wide.</p>
                    </div>
                    <div class="form-check form-switch fs-3">
                        <input class="form-check-input" type="checkbox" role="switch" checked="@DnsWorker.ProtectionEnabled" @onchange="ToggleBlocking" />
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0">Blocklist Management</h5>
                </div>
                <div class="card-body">
                    <p>Current Source: <code>@blocklistUrl</code></p>
                    <button class="btn btn-primary" @onclick="UpdateBlocklist" disabled="@isUpdating">
                        @if (isUpdating)
                        {
                            <span class="spinner-border spinner-border-sm me-2"></span>
                            <span>Updating...</span>
                        }
                        else
                        {
                            <span class="bi bi-arrow-repeat me-2"></span>
                            <span>Update Blocklist Now</span>
                        }
                    </button>
                    @if (!string.IsNullOrEmpty(updateMessage))
                    {
                        <div class="alert alert-info mt-3 py-2">
                            @updateMessage
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0">Data Retention & Security</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label">DNS Log Retention (Days)</label>
                        <input type="number" class="form-control" @bind="retentionDays" readonly />
                        <small class="text-muted">Managed via <code>appsettings.json</code></small>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">YouTube History Retention (Days)</label>
                        <input type="number" class="form-control" @bind="ytRetentionDays" readonly />
                        <small class="text-muted">Managed via <code>appsettings.json</code></small>
                    </div>
                    <hr />
                    <div class="mb-3">
                        <label class="form-label">Upstream Protocol</label>
                        <select class="form-select" @bind="upstreamProtocol">
                            <option value="UDP">Standard UDP (Port 53)</option>
                            <option value="DoH">DNS-over-HTTPS (Secure)</option>
                        </select>
                    </div>
                    <div class="mb-4">
                        <p class="small text-muted mb-2">Upstream relay is now managed via DNS Providers.</p>
                        <a href="admin/dns-providers" class="btn btn-sm btn-primary">
                            <span class="bi bi-gear-fill me-1"></span> Manage DNS Providers
                        </a>
                    </div>
                    <div class="form-check form-switch mb-3">
                        <input class="form-check-input" type="checkbox" role="switch" @bind="enforceDnssec" />
                        <label class="form-check-label">Enforce DNSSEC Validation</label>
                    </div>
                    <button class="btn btn-sm btn-outline-primary" @onclick="SaveSecuritySettings">Save Security Config</button>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private string blocklistUrl = "";
    private int retentionDays;
    private int ytRetentionDays;
    private bool isUpdating = false;
    private string? updateMessage;
    
    private string upstreamProtocol = "UDP";
    private string dohUrl = "";
    private bool enforceDnssec = false;

    protected override void OnInitialized()
    {
        blocklistUrl = Config.GetValue<string>("DnsAgent:BlocklistUrl") ?? "Default";
        retentionDays = Config.GetValue<int>("DnsAgent:LogRetentionDays", 5);
        ytRetentionDays = Config.GetValue<int>("DnsAgent:YouTubeRetentionDays", 90);
        
        upstreamProtocol = Config.GetValue<string>("DnsAgent:UpstreamProtocol") ?? "UDP";
        dohUrl = Config.GetValue<string>("DnsAgent:DoHUrl") ?? "https://dns.google/dns-query";
        enforceDnssec = Config.GetValue<bool>("DnsAgent:EnforceDnssec", false);
    }

    private void ToggleBlocking(ChangeEventArgs e)
    {
        if (e.Value is bool enabled)
        {
            DnsWorker.ProtectionEnabled = enabled;
            updateMessage = $"Protection {(enabled ? "Enabled" : "Disabled")} successfully.";
            StateHasChanged();
        }
    }

    private async Task UpdateBlocklist()
    {
        isUpdating = true;
        updateMessage = "Update started...";
        StateHasChanged();

        try
        {
            await DnsWorker.LoadBlockListAsync();
            updateMessage = $"Blocklist updated successfully at {DateTime.Now.ToString("HH:mm:ss")}";
        }
        catch (Exception ex)
        {
            updateMessage = $"Error: {ex.Message}";
        }
        finally
        {
            isUpdating = false;
        }
    }

    private void SaveSecuritySettings()
    {
        // For v1.3 Prototype: Update DnsWorker properties directly if we had them public
        // For now, update the DnsWorker's settings object proxy
        DnsWorker.UpdateSecuritySettings(upstreamProtocol, dohUrl, enforceDnssec);
        updateMessage = "Security settings updated (in-memory for this session).";
    }
}
