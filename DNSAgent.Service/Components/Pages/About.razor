@using DNSAgent.Service.Configuration
@page "/about"

<PageTitle>About - DNS Agent</PageTitle>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow-lg p-5 text-center">
                <div class="mb-4">
                    <img src="logo.png" alt="DNS Agent Logo" style="height: 128px;" />
                </div>
                <h1 class="display-4 text-primary">DNS Agent</h1>
                <p class="badge bg-secondary mb-3">Version @Constants.AppVersion</p>
                <p class="lead">Network-wide advertisement and tracker protection</p>
                <hr class="my-4">
                
                <div class="text-start">
                    <h5>About the Project</h5>
                    <p>DNS Agent is a lightweight, local DNS server designed to protect your entire network from intrusive advertisements, tracking scripts, and malicious domains. It provides a real-time dashboard and per-device analytics.</p>
                    
                    <p class="mt-3">
                        <span class="bi bi-github" aria-hidden="true"></span>
                        <strong>Source Code:</strong> <a href="@Constants.GitHubUrl" target="_blank">@Constants.GitHubUrl</a>
                    </p>

                    <h5 class="mt-4">Licensing</h5>
                    <p>This project is licensed under the <strong>GNU General Public License v3.0 (GPLv3)</strong>. This ensures that the software remains free and open-source for everyone.</p>
                    
                    <div class="alert alert-light border mt-3">
                        <small class="text-muted">
                            Copyright &copy; 2026 Free Software Foundation, Inc.<br />
                            All rights reserved.
                        </small>
                    </div>
                </div>
                
                <div class="mt-5">
                    <a href="/" class="btn btn-primary px-5">Back to Dashboard</a>
                </div>
            </div>
        </div>
    </div>
</div>
