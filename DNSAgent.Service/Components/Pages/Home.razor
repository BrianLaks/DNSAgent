@page "/"
@rendermode InteractiveServer
@using DNSAgent.Service.Data
@using Microsoft.EntityFrameworkCore
@inject DnsDbContext Db
@inject IJSRuntime JSRuntime
@implements IDisposable

<PageTitle>DNS Agent Dashboard</PageTitle>

<div class="container mt-4 pb-5">
    <div class="row mb-4 align-items-center">
        <div class="col">
            <h1>DNS Agent Dashboard</h1>
            <p class="text-muted">Real-time network protection and analytics</p>
        </div>
        <div class="col-auto">
            <button class="btn btn-primary" @onclick="RefreshStats">
                <span class="bi bi-arrow-repeat me-1"></span> Refresh
            </button>
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="row mb-4">
        <!-- Total Queries -->
        <div class="col-md-3 mb-3">
            <div class="card h-100 shadow-sm border-0 bg-primary text-white">
                <div class="card-body py-3">
                    <h6 class="card-title opacity-75 small">Queries (24h)</h6>
                    <h3 class="mb-0">@_stats.TotalQueries</h3>
                </div>
            </div>
        </div>

        <!-- Blocked Queries -->
        <div class="col-md-3 mb-3">
            <div class="card h-100 shadow-sm border-0 bg-danger text-white">
                <div class="card-body py-3">
                    <h6 class="card-title opacity-75 small">Blocked (24h)</h6>
                    <h3 class="mb-0">@_stats.BlockedQueries</h3>
                    <div class="small opacity-75">@_stats.BlockedPercentage.ToString("0.0")% Block Rate</div>
                </div>
            </div>
        </div>

        <!-- YouTube Ads Blocked -->
        <div class="col-md-3 mb-3">
            <div class="card h-100 shadow-sm border-0 bg-warning text-white">
                <div class="card-body py-3">
                    <h6 class="card-title opacity-75 small">YouTube Ads Blocked</h6>
                    <h3 class="mb-0">@_stats.YouTubeAdsBlocked</h3>
                    <div class="small opacity-75">Total saved</div>
                </div>
            </div>
        </div>

        <!-- Time Saved -->
        <div class="col-md-3 mb-3">
            <div class="card h-100 shadow-sm border-0 bg-info text-white">
                <div class="card-body py-3">
                    <h6 class="card-title opacity-75 small">YouTube Time Saved</h6>
                    <h3 class="mb-0">@FormatTime(_stats.TimeSavedSeconds)</h3>
                    <div class="small opacity-75">Sponsors: @_stats.SponsorsSkipped</div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <!-- Main Chart -->
        <div class="col-lg-8 mb-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-white border-bottom-0 pt-3">
                    <h5 class="card-title mb-0">Total Traffic (24h)</h5>
                    <small class="text-muted">Queries per hour</small>
                </div>
                <div class="card-body">
                    <div id="hourlyChart" style="height: 300px;"></div>
                </div>
            </div>
        </div>

        <!-- Distribution -->
        <div class="col-lg-4 mb-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-white border-bottom-0 pt-3">
                    <h5 class="card-title mb-0">Status Distribution</h5>
                    <small class="text-muted">Allowed vs Blocked</small>
                </div>
                <div class="card-body d-flex align-items-center justify-content-center">
                    <div id="distributionChart" style="height: 250px; width: 100%;"></div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Top Blocked -->
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white border-bottom-0 pt-3">
                    <h5 class="card-title mb-0">Top Blocked Domains</h5>
                </div>
                <div class="card-body">
                    @if (_stats.TopBlocked == null || !_stats.TopBlocked.Any())
                    {
                        <p class="text-muted small">No blocked domains recorded recently.</p>
                    }
                    else
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var item in _stats.TopBlocked)
                            {
                                <div class="list-group-item d-flex justify-content-between align-items-center px-0 py-2">
                                    <span class="text-truncate small" style="max-width: 70%;" title="@item.Domain">@item.Domain</span>
                                    <span class="badge bg-danger rounded-pill">@item.Count</span>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Quick Info -->
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm border-0 bg-light">
                <div class="card-body">
                    <h5 class="card-title">Network Guard</h5>
                    <p class="small text-muted mb-3">Your network is being protected by DNS Agent. All connected devices using this server as their primary DNS are currently safe from trackers and ads.</p>
                    <div class="d-flex gap-2">
                        <a href="logs" class="btn btn-sm btn-outline-primary">View Real-time Logs</a>
                        <a href="hosts" class="btn btn-sm btn-outline-secondary">Device Analytics</a>
                    </div>
                </div>
            </div>
            
            <div class="mt-4 text-center">
                <a href="admin/youtube-stats" class="btn btn-warning btn-sm shadow-sm ps-3 pe-3 rounded-pill text-white fw-bold">
                    <span class="bi bi-play-circle-fill me-1"></span> YouTube Intelligence Data
                </a>
            </div>
        </div>
    </div>
</div>

@code {
    private DashboardStats _stats = new();
    private System.Threading.Timer? _timer;

    protected override async Task OnInitializedAsync()
    {
        await RefreshStats();
        // Auto-refresh every 30 seconds for the dashboard
        _timer = new System.Threading.Timer(async _ => 
        {
            await InvokeAsync(async () => 
            {
                await RefreshStats();
            });
        }, null, 30000, 30000);
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender || _stats.ShouldRenderCharts)
        {
            await RenderDashboardCharts();
            _stats.ShouldRenderCharts = false;
        }
    }

    private async Task RefreshStats()
    {
        try
        {
            var since = DateTime.Now.AddHours(-24);
            
            // DNS Stats
            var queries = await Db.QueryLogs
                .Where(x => x.Timestamp >= since)
                .ToListAsync();

            _stats.TotalQueries = queries.Count;
            _stats.BlockedQueries = queries.Count(s => s.Status == "Blocked");
            _stats.AllowedQueries = queries.Count(s => s.Status == "Allowed");

            // Top Blocked
            _stats.TopBlocked = queries.Where(x => x.Status == "Blocked")
                .GroupBy(x => x.Domain)
                .OrderByDescending(g => g.Count())
                .Take(5)
                .Select(g => (Domain: g.Key, Count: g.Count()))
                .ToList();

            // Hourly Distribution
            var hourlyData = queries.GroupBy(x => x.Timestamp.Hour)
                .Select(g => new { Hour = g.Key, Count = g.Count() })
                .ToDictionary(x => x.Hour, x => x.Count);

            var hours = Enumerable.Range(0, 24).ToArray();
            _stats.HourlyHours = hours;
            _stats.HourlyValues = hours.Select(h => hourlyData.ContainsKey(h) ? hourlyData[h] : 0).ToArray();

            // YouTube Stats
            try 
            {
                _stats.YouTubeAdsBlocked = await Db.YouTubeStats.SumAsync(s => s.AdsBlocked);
                _stats.SponsorsSkipped = await Db.YouTubeStats.SumAsync(s => s.SponsorsSkipped);
                _stats.TimeSavedSeconds = await Db.YouTubeStats.SumAsync(s => s.TimeSavedSeconds);
            }
            catch { }

            _stats.ShouldRenderCharts = true;
            StateHasChanged();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading stats: {ex.Message}");
        }
    }

    private async Task RenderDashboardCharts()
    {
        if (_stats.HourlyHours != null && _stats.HourlyValues != null)
        {
            try
            {
                await JSRuntime.InvokeVoidAsync("renderReportsCharts", 
                    _stats.HourlyHours, 
                    _stats.HourlyValues, 
                    _stats.BlockedQueries, 
                    _stats.AllowedQueries);
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Chart render error: {ex.Message}");
            }
        }
    }

    private string FormatTime(double seconds)
    {
        if (seconds < 60) return $"{seconds:F0}s";
        if (seconds < 3600) return $"{seconds / 60:F1}m";
        return $"{seconds / 3600:F1}h";
    }

    public void Dispose()
    {
        _timer?.Dispose();
    }

    public class DashboardStats
    {
        public int TotalQueries { get; set; }
        public int BlockedQueries { get; set; }
        public int AllowedQueries { get; set; }
        public int YouTubeAdsBlocked { get; set; }
        public int SponsorsSkipped { get; set; }
        public double TimeSavedSeconds { get; set; }
        public double BlockedPercentage => TotalQueries == 0 ? 0 : (double)BlockedQueries / TotalQueries * 100;
        public List<(string Domain, int Count)>? TopBlocked { get; set; }
        public int[]? HourlyHours { get; set; }
        public int[]? HourlyValues { get; set; }
        public bool ShouldRenderCharts { get; set; }
    }
}
