@page "/"
@rendermode InteractiveServer
@using DNSAgent.Service.Data
@using Microsoft.EntityFrameworkCore
@inject DnsDbContext Db
@inject IJSRuntime JSRuntime
@implements IDisposable

<PageTitle>DNS Agent Dashboard</PageTitle>

<div class="container mt-4 pb-5">
    <div class="row mb-4 align-items-center">
        <div class="col">
            <h1>DNS Agent Dashboard</h1>
            <p class="text-muted">Real-time network protection and analytics</p>
        </div>
        <div class="col-auto">
            <button class="btn btn-primary" @onclick="RefreshStats">
                <span class="bi bi-arrow-repeat me-1"></span> Refresh
            </button>
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="row mb-4">
        <!-- Total Queries -->
        <div class="col-md-3 mb-3">
            <div class="card h-100 shadow-sm border-0 bg-primary text-white card-animate">
                <div class="card-body py-3">
                    <h6 class="card-title opacity-75 small">Total Queries (24h)</h6>
                    <h3 class="mb-0">@_stats.TotalQueries</h3>
                </div>
            </div>
        </div>

        <!-- Blocked Queries -->
        <div class="col-md-3 mb-3">
            <div class="card h-100 shadow-sm border-0 bg-danger text-white card-animate">
                <div class="card-body py-3">
                    <h6 class="card-title opacity-75 small">Blocked (24h)</h6>
                    <h3 class="mb-0">@_stats.BlockedQueries</h3>
                    <div class="small opacity-75">@_stats.BlockedPercentage.ToString("0.0")% Block Rate</div>
                </div>
            </div>
        </div>

        <!-- YouTube Ads Blocked -->
        <div class="col-md-3 mb-3">
            <div class="card h-100 shadow-sm border-0 bg-warning text-dark card-animate">
                <div class="card-body py-3">
                    <h6 class="card-title opacity-75 small">YouTube Ads Blocked</h6>
                    <h3 class="mb-0">@_stats.YouTubeAdsBlocked</h3>
                    <div class="small opacity-75">Total network</div>
                </div>
            </div>
        </div>

        <!-- YouTube Time Saved -->
        <div class="col-md-3 mb-3">
            <div class="card h-100 shadow-sm border-0 bg-info text-white card-animate">
                <div class="card-body py-3">
                    <h6 class="card-title opacity-75 small">YouTube Time Saved</h6>
                    <h3 class="mb-0">@FormatTime(_stats.TimeSavedSeconds)</h3>
                    <div class="small opacity-75">Sponsors: @_stats.SponsorsSkipped</div>
                </div>
            </div>
        </div>
    </div>

    <div class="text-center mb-5">
        <AuthorizeView Roles="Admin">
            <a href="admin/reports" class="btn btn-primary btn-lg shadow-sm px-5">
                View Detailed Analytics ðŸ“Š
            </a>
        </AuthorizeView>
    </div>

    <div class="row mb-4">
        <!-- Main Chart -->
        <div class="col-lg-8 mb-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-white border-bottom-0 pt-3">
                    <h5 class="card-title mb-0">Activity Trend (24h)</h5>
                    <small class="text-muted">DNS Queries across all devices</small>
                </div>
                <div class="card-body">
                    <div id="hourlyChart" style="height: 300px;"></div>
                </div>
            </div>
        </div>

        <!-- Distribution -->
        <div class="col-lg-4 mb-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-white border-bottom-0 pt-3">
                    <h5 class="card-title mb-0">Status Distribution</h5>
                    <small class="text-muted">Allowed vs Blocked</small>
                </div>
                <div class="card-body d-flex align-items-center justify-content-center">
                    <div id="distributionChart" style="height: 250px; width: 100%;"></div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Connected Devices List -->
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-white border-bottom-0 pt-3 d-flex justify-content-between">
                    <h5 class="card-title mb-0">Connected Hosts</h5>
                    <span class="badge bg-success">@_stats.ConnectedAgents Active</span>
                </div>
                <div class="card-body">
                    @if (_stats.ActiveDevices == null || !_stats.ActiveDevices.Any())
                    {
                        <div class="text-center py-4">
                            <p class="text-muted small mb-0">No active devices detected.</p>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-sm table-borderless">
                                <thead>
                                    <tr class="text-muted small">
                                        <th>Device</th>
                                        <th>IP Address</th>
                                        <th class="text-end">Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var device in _stats.ActiveDevices)
                                    {
                                        <tr>
                                            <td>
                                                <div class="fw-bold small">@device.Name</div>
                                            </td>
                                            <td class="small text-muted">@device.IP</td>
                                            <td class="text-end">
                                                <span class="badge rounded-pill bg-success" style="font-size: 0.65rem;">Online</span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Top Blocked (Admin Only) -->
        <AuthorizeView Roles="Admin">
            <Authorized>
                <div class="col-md-6 mb-4">
                    <div class="card shadow-sm border-0 h-100">
                        <div class="card-header bg-white border-bottom-0 pt-3">
                            <h5 class="card-title mb-0">Top Blocked Domains</h5>
                        </div>
                        <div class="card-body">
                            @if (_stats.TopBlocked == null || !_stats.TopBlocked.Any())
                            {
                                <p class="text-muted small">No blocked domains recorded recently.</p>
                            }
                            else
                            {
                                <div class="list-group list-group-flush">
                                    @foreach (var item in _stats.TopBlocked)
                                    {
                                        <div class="list-group-item d-flex justify-content-between align-items-center px-0 py-2 border-0 border-bottom">
                                            <span class="text-truncate small" style="max-width: 70%;" title="@item.Domain">@item.Domain</span>
                                            <span class="badge bg-danger rounded-pill">@item.Count</span>
                                        </div>
                                    }
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </Authorized>
            <NotAuthorized>
                <div class="col-md-6 mb-4">
                    <div class="card shadow-sm border-0 bg-light h-100">
                        <div class="card-body text-center py-5 d-flex flex-column justify-content-center">
                            <span class="bi bi-lock-fill fs-2 text-muted"></span>
                            <h6 class="mt-2 text-dark">Domain Analytics Restricted</h6>
                            <p class="small text-muted mb-0">Login as Admin to see deep insights.</p>
                        </div>
                    </div>
                </div>
            </NotAuthorized>
        </AuthorizeView>
    </div>
</div>

@code {
    private DashboardStats _stats = new();
    private System.Threading.Timer? _timer;

    protected override async Task OnInitializedAsync()
    {
        await RefreshStats();
        // Auto-refresh every 30 seconds for the dashboard
        _timer = new System.Threading.Timer(async _ => 
        {
            await InvokeAsync(async () => 
            {
                await RefreshStats();
            });
        }, null, 30000, 30000);
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender || _stats.ShouldRenderCharts)
        {
            await RenderDashboardCharts();
            _stats.ShouldRenderCharts = false;
        }
    }

    private async Task RefreshStats()
    {
        try
        {
            var now = DateTime.Now;
            var since = now.AddHours(-24);
            
            // DNS Stats
            var queries = await Db.QueryLogs
                .Where(x => x.Timestamp >= since)
                .OrderBy(x => x.Timestamp)
                .ToListAsync();

            _stats.TotalQueries = queries.Count;
            _stats.BlockedQueries = queries.Count(s => s.Status == "Blocked");
            _stats.AllowedQueries = queries.Count(s => s.Status == "Allowed");

            // Top Blocked
            _stats.TopBlocked = queries.Where(x => x.Status == "Blocked")
                .GroupBy(x => x.Domain)
                .OrderByDescending(g => g.Count())
                .Take(5)
                .Select(g => (Domain: g.Key, Count: g.Count()))
                .ToList();

            // Hourly Distribution (correctly bucketed by actual hour in last 24h)
            var hourlyBuckets = new int[24];
            var labels = new string[24];
            
            for (int i = 0; i < 24; i++)
            {
                var hourStart = now.AddHours(-23 + i);
                var hourEnd = hourStart.AddHours(1);
                
                hourlyBuckets[i] = queries.Count(q => q.Timestamp >= hourStart && q.Timestamp < hourEnd);
                labels[i] = hourStart.ToString("HH:00");
            }

            _stats.HourlyLabels = labels;
            _stats.HourlyValues = hourlyBuckets;

            // YouTube Stats
            try 
            {
                _stats.YouTubeAdsBlocked = await Db.YouTubeStats.SumAsync(s => s.AdsBlocked);
                _stats.SponsorsSkipped = await Db.YouTubeStats.SumAsync(s => s.SponsorsSkipped);
                _stats.TimeSavedSeconds = await Db.YouTubeStats.SumAsync(s => s.TimeSavedSeconds);
            }
            catch { }

            // Connected Agents (Active heartbeats in last 10 mins)
            var heartbeatCutoff = DateTime.UtcNow.AddMinutes(-10);
            var activeHeartbeats = await Db.Devices
                .Where(d => d.LastSeen >= heartbeatCutoff)
                .ToListAsync();

            _stats.ConnectedAgents = activeHeartbeats.Count;
            _stats.ActiveDevices = activeHeartbeats.Select(d => new ActiveDevice {
                Name = d.MachineName ?? "Unknown Device",
                IP = d.LastIP ?? "Unknown IP"
            }).ToList();

            _stats.ShouldRenderCharts = true;
            StateHasChanged();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading stats: {ex.Message}");
        }
    }

    private async Task RenderDashboardCharts()
    {
        if (_stats.HourlyLabels != null && _stats.HourlyValues != null)
        {
            try
            {
                await JSRuntime.InvokeVoidAsync("renderReportsCharts", 
                    _stats.HourlyLabels, 
                    _stats.HourlyValues, 
                    _stats.BlockedQueries, 
                    _stats.AllowedQueries);
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Chart render error: {ex.Message}");
            }
        }
    }

    private string FormatTime(double seconds)
    {
        if (seconds < 60) return $"{seconds:F0}s";
        if (seconds < 3600) return $"{seconds / 60:F1}m";
        return $"{seconds / 3600:F1}h";
    }

    public void Dispose()
    {
        _timer?.Dispose();
    }

    public class DashboardStats
    {
        public int TotalQueries { get; set; }
        public int BlockedQueries { get; set; }
        public int AllowedQueries { get; set; }
        public int ConnectedAgents { get; set; }
        public int YouTubeAdsBlocked { get; set; }
        public int SponsorsSkipped { get; set; }
        public double TimeSavedSeconds { get; set; }
        public double BlockedPercentage => TotalQueries == 0 ? 0 : (double)BlockedQueries / TotalQueries * 100;
        public List<(string Domain, int Count)>? TopBlocked { get; set; }
        public List<ActiveDevice>? ActiveDevices { get; set; }
        public string[]? HourlyLabels { get; set; }
        public int[]? HourlyValues { get; set; }
        public bool ShouldRenderCharts { get; set; }
    }

    public class ActiveDevice
    {
        public string Name { get; set; } = "";
        public string IP { get; set; } = "";
    }
}
