@page "/admin/youtube-stats"
@using Microsoft.EntityFrameworkCore
@using DNSAgent.Service.Data
@inject DnsDbContext Db
@attribute [Authorize(Roles = "Admin")]
@rendermode InteractiveServer

<PageTitle>YouTube Ad Blocking Stats - DNS Agent</PageTitle>

<div class="page-header">
    <h1>üéØ YouTube Ad Blocking Statistics</h1>
    <p class="subtitle">Real-time metrics from browser extension</p>
</div>

<div class="stats-grid">
    <div class="stat-card">
        <div class="stat-icon">üõ°Ô∏è</div>
        <div class="stat-value">@totalAdsBlocked</div>
        <div class="stat-label">Total Ads Blocked</div>
    </div>
    
    <div class="stat-card">
        <div class="stat-icon">‚ö°</div>
        <div class="stat-value">@adsBlockedToday</div>
        <div class="stat-label">Blocked Today</div>
    </div>
    
    <div class="stat-card">
        <div class="stat-icon">üìä</div>
        <div class="stat-value">@serverVersion</div>
        <div class="stat-label">Filter Version</div>
    </div>
    
    <div class="stat-card">
        <div class="stat-icon">üåê</div>
        <div class="stat-value">@connectedExtensions</div>
        <div class="stat-label">Connected Extensions</div>
    </div>

    <div class="stat-card">
        <div class="stat-icon">üé≠</div>
        <div class="stat-value">@totalTitlesCleaned</div>
        <div class="stat-label">Titles Cleaned</div>
    </div>
</div>

<div class="section">
    <h2>üìà Recent Activity</h2>
    <div class="activity-log">
        @if (recentStats.Any())
        {
            <table class="stats-table">
                <thead>
                    <tr>
                        <th>Timestamp</th>
                        <th>Ads Blocked</th>
                        <th>Sponsors</th>
                        <th>Titles Cleaned</th>
                        <th>Filter</th>
                        <th>Effectiveness</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var stat in recentStats)
                    {
                        <tr>
                            <td>@stat.Timestamp.ToString("MM/dd HH:mm:ss")</td>
                            <td class="success">@stat.AdsBlocked</td>
                            <td class="info">@stat.SponsorsSkipped</td>
                            <td class="primary">@stat.TitlesCleaned</td>
                            <td>@stat.FilterVersion</td>
                            <td>
                                <div class="effectiveness-bar">
                                    <div class="effectiveness-fill" style="width: @GetEffectiveness(stat)%"></div>
                                    <span>@GetEffectiveness(stat)%</span>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="empty-state">
                <p>üì≠ No statistics yet</p>
                <p class="hint">Install the Chrome extension and watch YouTube videos to see stats here!</p>
            </div>
        }
    </div>
</div>

<div class="section">
    <h2>üîß Extension Status</h2>
    <div class="status-grid">
        <div class="status-item">
            <span class="status-label">API Endpoint:</span>
            <code>http://localhost:5123/api/youtube-stats</code>
        </div>
        <div class="status-item">
            <span class="status-label">Last Report:</span>
            <span>@lastReportTime</span>
        </div>
        <div class="status-item">
            <span class="status-label">Server Version:</span>
            <span>@serverVersion</span>
        </div>
    </div>
</div>

<div class="section">
    <h2>üìù How It Works</h2>
    <div class="info-cards">
        <div class="info-card">
            <h3>1. Extension Detects Ads</h3>
            <p>The Chrome extension monitors YouTube for ads using 4-layer detection</p>
        </div>
        <div class="info-card">
            <h3>2. Ads Are Blocked</h3>
            <p>CSS hiding, auto-skip, and 16x speed-through eliminate ads</p>
        </div>
        <div class="info-card">
            <h3>3. Stats Reported</h3>
            <p>Every 10 ads, the extension reports statistics to this API</p>
        </div>
        <div class="info-card">
            <h3>4. Dashboard Updates</h3>
            <p>Real-time metrics show blocking effectiveness</p>
        </div>
    </div>
</div>

@code {
    private int totalAdsBlocked = 0;
    private int totalSponsorsSkipped = 0;
    private int totalTitlesCleaned = 0;
    private int totalThumbnailsReplaced = 0;
    private double totalTimeSaved = 0;
    private int adsBlockedToday = 0;
    private int connectedExtensions = 0;
    private string lastReportTime = "Never";
    private string serverVersion = $"v{Constants.AppVersion}";
    private List<YouTubeStat> recentStats = new();

    protected override async Task OnInitializedAsync()
    {
        totalAdsBlocked = await Db.YouTubeStats.SumAsync(s => s.AdsBlocked);
        totalSponsorsSkipped = await Db.YouTubeStats.SumAsync(s => s.SponsorsSkipped);
        totalTitlesCleaned = await Db.YouTubeStats.SumAsync(s => s.TitlesCleaned);
        totalThumbnailsReplaced = await Db.YouTubeStats.SumAsync(s => s.ThumbnailsReplaced);
        totalTimeSaved = await Db.YouTubeStats.SumAsync(s => s.TimeSavedSeconds);
        
        var today = DateTime.UtcNow.Date;
        adsBlockedToday = await Db.YouTubeStats
            .Where(s => s.Timestamp >= today)
            .SumAsync(s => s.AdsBlocked);
            
        recentStats = await Db.YouTubeStats
            .OrderByDescending(s => s.Timestamp)
            .Take(20)
            .ToListAsync();
            
        var lastStat = recentStats.FirstOrDefault();
        if (lastStat != null)
        {
            lastReportTime = lastStat.Timestamp.ToLocalTime().ToString("MM/dd HH:mm:ss");
        }

        connectedExtensions = await Db.Devices
            .Where(s => s.LastSeen >= DateTime.UtcNow.AddMinutes(-10))
            .CountAsync();
    }

    private string FormatTime(double seconds)
    {
        if (seconds < 60) return $"{seconds:F1}s";
        if (seconds < 3600) return $"{seconds / 60:F1}m";
        return $"{seconds / 3600:F1}h";
    }

    private int GetEffectiveness(YouTubeStat stat)
    {
        var total = stat.AdsBlocked + stat.AdsFailed;
        if (total == 0) return 0;
        return (int)((double)stat.AdsBlocked / total * 100);
    }
}

