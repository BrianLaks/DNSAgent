@page "/admin/youtube-stats"
@using Microsoft.EntityFrameworkCore
@using DNSAgent.Service.Data
@inject DnsDbContext Db
@rendermode InteractiveServer

<PageTitle>YouTube Ad Blocking Stats - DNS Agent</PageTitle>

<div class="page-header">
    <h1>üéØ YouTube Ad Blocking Statistics</h1>
    <p class="subtitle">Real-time metrics from browser extension</p>
</div>

<div class="stats-grid">
    <div class="stat-card">
        <div class="stat-icon">üõ°Ô∏è</div>
        <div class="stat-value">@totalAdsBlocked</div>
        <div class="stat-label">Total Ads Blocked</div>
    </div>
    
    <div class="stat-card">
        <div class="stat-icon">‚ö°</div>
        <div class="stat-value">@adsBlockedToday</div>
        <div class="stat-label">Blocked Today</div>
    </div>
    
    <div class="stat-card">
        <div class="stat-icon">üìä</div>
        <div class="stat-value">@extensionVersion</div>
        <div class="stat-label">Filter Version</div>
    </div>
    
    <div class="stat-card">
        <div class="stat-icon">üåê</div>
        <div class="stat-value">@connectedExtensions</div>
        <div class="stat-label">Connected Extensions</div>
    </div>
</div>

<div class="section">
    <h2>üìà Recent Activity</h2>
    <div class="activity-log">
        @if (recentStats.Any())
        {
            <table class="stats-table">
                <thead>
                    <tr>
                        <th>Timestamp</th>
                        <th>Ads Blocked</th>
                        <th>Ads Failed</th>
                        <th>Filter Version</th>
                        <th>Effectiveness</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var stat in recentStats)
                    {
                        <tr>
                            <td>@stat.Timestamp.ToString("MM/dd HH:mm:ss")</td>
                            <td class="success">@stat.AdsBlocked</td>
                            <td class="warning">@stat.AdsFailed</td>
                            <td>@stat.FilterVersion</td>
                            <td>
                                <div class="effectiveness-bar">
                                    <div class="effectiveness-fill" style="width: @GetEffectiveness(stat)%"></div>
                                    <span>@GetEffectiveness(stat)%</span>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="empty-state">
                <p>üì≠ No statistics yet</p>
                <p class="hint">Install the Chrome extension and watch YouTube videos to see stats here!</p>
            </div>
        }
    </div>
</div>

<div class="section">
    <h2>üîß Extension Status</h2>
    <div class="status-grid">
        <div class="status-item">
            <span class="status-label">API Endpoint:</span>
            <code>http://localhost:5123/api/youtube-stats</code>
        </div>
        <div class="status-item">
            <span class="status-label">Last Report:</span>
            <span>@lastReportTime</span>
        </div>
        <div class="status-item">
            <span class="status-label">Extension Location:</span>
            <code>Release\Dist\extension\</code>
        </div>
    </div>
</div>

<div class="section">
    <h2>üìù How It Works</h2>
    <div class="info-cards">
        <div class="info-card">
            <h3>1. Extension Detects Ads</h3>
            <p>The Chrome extension monitors YouTube for ads using 4-layer detection</p>
        </div>
        <div class="info-card">
            <h3>2. Ads Are Blocked</h3>
            <p>CSS hiding, auto-skip, and 16x speed-through eliminate ads</p>
        </div>
        <div class="info-card">
            <h3>3. Stats Reported</h3>
            <p>Every 10 ads, the extension reports statistics to this API</p>
        </div>
        <div class="info-card">
            <h3>4. Dashboard Updates</h3>
            <p>Real-time metrics show blocking effectiveness</p>
        </div>
    </div>
</div>

