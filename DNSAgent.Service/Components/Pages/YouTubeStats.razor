        text-align: center;
    }

    .stat-icon {
        font-size: 32px;
        margin-bottom: 10px;
    }

    .stat-value {
        font-size: 36px;
        font-weight: bold;
        color: var(--primary-color);
        margin-bottom: 5px;
    }

    .stat-label {
        font-size: 14px;
        opacity: 0.7;
    }

    .stats-table {
        width: 100%;
        border-collapse: collapse;
    }

    .stats-table th {
        background: var(--header-bg);
        padding: 12px;
        text-align: left;
        border-bottom: 2px solid var(--border-color);
    }

