    private int GetEffectiveness(YouTubeStatEntry stat)
    {
        var total = stat.AdsBlocked + stat.AdsFailed;
        if (total == 0) return 0;
        return (int)((double)stat.AdsBlocked / total * 100);
    }

    private class YouTubeStatEntry
    {
        public DateTime Timestamp { get; set; }
