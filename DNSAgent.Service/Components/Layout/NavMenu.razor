@implements IDisposable
@using DNSAgent.Service.Services
@inject ThemeService ThemeService
@using Microsoft.AspNetCore.Components.Authorization

<div class="brand-container">
    <a href="">
        <img src="@ThemeService.GetLogoPath()" class="brand-logo" alt="Logo" />
        <span class="brand-name">@ThemeService.GetBrandName()</span>
    </a>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Dashboard
            </NavLink>
        </div>

        <div class="nav-item px-3">
             <NavLink class="nav-link" href="help">
                <span class="bi bi-question-circle-nav-menu" aria-hidden="true"></span> Help & Setup
            </NavLink>
        </div>

        <AuthorizeView Roles="Admin">
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="logs">
                        <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Query Logs
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="admin/settings">
                        <span class="bi bi-gear-nav-menu" aria-hidden="true"></span> Settings
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="admin/youtube-stats">
                        <span class="bi bi-youtube-nav-menu" aria-hidden="true"></span> YouTube Stats
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="branding">
                        <span class="bi bi-palette-nav-menu" aria-hidden="true"></span> Brand Exploration
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="hosts">
                <span class="bi bi-hdd-network-nav-menu" aria-hidden="true"></span> Hosts Analytics
            </NavLink>
        </div>
        
        <div class="nav-item px-3">
             <NavLink class="nav-link" href="whitelist">
                <span class="bi bi-shield-check-nav-menu" aria-hidden="true"></span> Whitelist
            </NavLink>
        </div>

        <AuthorizeView>
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="logout">
                        <span class="bi bi-box-arrow-right" aria-hidden="true"></span> Logout
                    </NavLink>
                </div>
            </Authorized>
            <NotAuthorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="login">
                        <span class="bi bi-box-arrow-in-right" aria-hidden="true"></span> Login
                    </NavLink>
                </div>
            </NotAuthorized>
        </AuthorizeView>
    </nav>
</div>

@code {
    protected override void OnInitialized()
    {
        ThemeService.OnThemeChanged += StateHasChanged;
    }

    public void Dispose()
    {
        ThemeService.OnThemeChanged -= StateHasChanged;
    }
}
