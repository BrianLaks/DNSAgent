@inherits LayoutComponentBase
@implements IDisposable
@using DNSAgent.Service.Services
@inject ThemeService ThemeService
@using DNSAgent.Service.Configuration
@using Microsoft.AspNetCore.Components.Authorization
@inject DnsWorker DnsWorker

<div class="page @ThemeService.GetThemeClass()" style="@ThemeService.GetInlineStyles()">
    <div class="dashboard-watermark">
        <img src="@ThemeService.GetLogoPath()" alt="" />
    </div>
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4 d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center gap-3">
                <AuthorizeView>
                    <Authorized>
                        <div class="form-check form-switch d-flex align-items-center gap-2 mb-0">
                            <input class="form-check-input" type="checkbox" role="switch" id="ribbonBlocking" checked="@DnsWorker.ProtectionEnabled" @onchange="ToggleBlocking" />
                            <label class="form-check-label small fw-bold mt-1" for="ribbonBlocking">Protection</label>
                        </div>

                        <div class="form-check form-switch d-flex align-items-center gap-2 mb-0 border-start ps-3 ms-1">
                            <input class="form-check-input" type="checkbox" role="switch" id="ribbonDnssec" checked="@DnsWorker.EnforceDnssec" @onchange="ToggleDnssec" />
                            <label class="form-check-label small fw-bold mt-1" for="ribbonDnssec">Enforce DNSSEC</label>
                        </div>
                    </Authorized>
                </AuthorizeView>

                <a href="@(Constants.GitHubUrl)" target="_blank" class="text-muted text-decoration-none small border-start ps-3">
                    <span class="bi bi-github"></span> GitHub
                </a>
            </div>
            <div class="d-flex align-items-center gap-3">
                <AuthorizeView>
                    <Authorized>
                        <span class="text-muted small">Logged in as: <a href="admin/profile" class="fw-bold text-decoration-none text-dark">@context.User.Identity?.Name</a></span>
                        <a href="logout" class="btn btn-sm btn-outline-danger ms-2">Logout</a>
                    </Authorized>
                    <NotAuthorized>
                        <a href="login" class="btn btn-sm btn-primary">Login</a>
                    </NotAuthorized>
                </AuthorizeView>
                <a href="about" class="text-muted text-decoration-none border-start ps-3">About</a>
            </div>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code {
    protected override void OnInitialized()
    {
        ThemeService.OnThemeChanged += StateHasChanged;
    }

    private void ToggleBlocking(ChangeEventArgs e)
    {
        if (e.Value is bool enabled)
        {
            DnsWorker.ProtectionEnabled = enabled;
            StateHasChanged();
        }
    }

    private void ToggleDnssec(ChangeEventArgs e)
    {
        if (e.Value is bool enabled)
        {
            DnsWorker.EnforceDnssec = enabled;
            StateHasChanged();
        }
    }

    public void Dispose()
    {
        ThemeService.OnThemeChanged -= StateHasChanged;
    }
}
